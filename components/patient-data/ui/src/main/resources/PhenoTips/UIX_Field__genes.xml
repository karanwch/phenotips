    <property>
      <code>(function () {
  var expandListener = function (event) {
    event.stop();
    var expandTool = event.findElement();
    var sublist = expandTool.up('li');
    if (!sublist || !expandTool) { return; }

    if (sublist.hasClassName('collapsed')) {
      sublist.removeClassName('collapsed');
      expandTool.innerHTML = "▼";
    } else {
      expandTool.innerHTML = "►";
      sublist.addClassName('collapsed');
    }
  };

  var newStatusSelected = function (event) {
    var elt = event.findElement('li');
    elt &amp;&amp; elt.removeClassName('collapsed');
  };

  var init = function() {
    ((event &amp;&amp; event.memo.elements) || [$('body')]).each(function(element) {
      element.select('.gene-status-options .expand-tool').each(function(item) {
        // Collapse all unselected subcategories for gene status
        if (item.up('li') &amp;&amp; item.up('li').select('input:checked').length == 0) {
          item.up('li').addClassName('collapsed');
          item.innerHTML = "►";
        }
      });

      element.select('.gene-status-options label').invoke('observe', 'click', newStatusSelected);
      element.select('.gene-status-options .expand-tool').invoke('observe', 'click', expandListener);
    });
    return true;
  };

  (XWiki &amp;&amp; XWiki.domIsLoaded &amp;&amp; init()) || document.observe("xwiki:dom:loaded", init);
  document.observe("xwiki:dom:updated", init);
})();
</code>
